<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="homey_enabled"
        android:title="Homey" />
    <EditTextPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:key="homey_server_ip"
        android:title="@string/HomeyServerAddress" />
    <EditTextPreference
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:key="homey_bearer"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Homey: Bearer Token" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="fibaro_enabled"
        android:title="Fibaro" />
    <EditTextPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:key="fibaro_server_ip"
        android:title="@string/FibaroServerAddress" />
    <EditTextPreference
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:key="fibaro_server_login"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/FibaroLogin" />
    <EditTextPreference
        android:inputType="textPassword"
        android:key="fibaro_server_password"
        android:maxLines="1"
        android:password="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/FibaroPassword" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="vera_enabled"
        android:title="Vera" />
    <EditTextPreference
        android:key="vera_server_ip"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/VeraServerAddress" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="keyRecognizer"
        android:title="@string/VoiceActivation" />
    <EditTextPreference
        android:autoText="true"
        android:defaultValue="@string/defaultKeyPhrase"
        android:inputType="text"
        android:key="keyphrase"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/KeyPhrase" />
    <EditTextPreference
        android:defaultValue="5"
        android:inputType="numberDecimal"
        android:key="keywordThreshold"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/Sensitivity" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="offline_recognition"
        android:title="@string/OfflineRecognition" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="tts_enabled"
        android:title="@string/VoiceResponses" />

</PreferenceScreen>
