<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Homey">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="homey_enabled"
            android:title="Homey" />
        <EditTextPreference
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:key="homey_server_ip"
            android:title="@string/HomeyServerAddress" />
        <EditTextPreference
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:key="homey_bearer"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Homey: Bearer Token" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Fibaro">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="fibaro_enabled"
            android:title="Fibaro" />
        <EditTextPreference
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:key="fibaro_server_ip"
            android:title="@string/FibaroServerAddress" />
        <EditTextPreference
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:key="fibaro_server_login"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/FibaroLogin" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="fibaro_server_password"
            android:maxLines="1"
            android:password="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/FibaroPassword" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Vera">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="vera_enabled"
            android:title="Vera" />
        <EditTextPreference
            android:key="vera_server_ip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/VeraServerAddress" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/voice">
        <ListPreference
            android:defaultValue="None"
            android:entries="@array/VoiceActivationEntries"
            android:entryValues="@array/VoiceActivationValues"
            android:key="keyRecognizerType"
            android:title="@string/VoiceActivation" />
        <ListPreference
            android:defaultValue="Google"
            android:entries="@array/VoiceRecognitionEntries"
            android:entryValues="@array/VoiceRecognitionValues"
            android:key="voiceRecognizerType"
            android:title="@string/VoiceRecognition" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Snowboy">
        <ListPreference
            android:defaultValue="Alexa"
            android:entries="@array/KeyPhraseEntries"
            android:entryValues="@array/KeyPhraseValues"
            android:key="SnowboyKeyPhrase"
            android:title="@string/SnowboyKeyPhrase" />
        <EditTextPreference
            android:defaultValue="60"
            android:inputType="numberDecimal"
            android:key="SnowboySensitivity"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/SnowboySensitivity" />
    </PreferenceCategory>
    <PreferenceCategory android:title="PocketSphinx">
        <EditTextPreference
            android:autoText="true"
            android:defaultValue="@string/defaultKeyPhrase"
            android:inputType="text"
            android:key="PocketSphinxKeyPhrase"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/PocketSphinxKeyPhrase" />
        <EditTextPreference
            android:defaultValue="95"
            android:inputType="numberDecimal"
            android:key="PocketSphinxSensitivity"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/PocketSphinxSensitivity" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Google">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="offline_recognition"
            android:title="@string/OfflineRecognition" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="tts_enabled"
            android:title="@string/VoiceResponses" />
    </PreferenceCategory>

</PreferenceScreen>
